{
  "name": "dev-pledge/slim-skeleton",
  "description": "A Slim Framework skeleton application for rapid development with Docker",
  "keywords": [
    "microframework",
    "rest",
    "router",
    "psr7"
  ],
  "homepage": "https://github.com/Dev-Pledge/SlimSkeleton",
  "license": "MIT",
  "authors": [
    {
      "name": "Tom Wright",
      "email": "contact@tomwright.me"
    },
    {
      "name": "John Saunders",
      "email": "john@yettimedia.co.uk"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17",
    "tomwright/extended-pdo": "^1.0",
    "tomwright/json": "^1.0",
    "vlucas/phpdotenv": "^2.4"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0",
    "eaglewu/swoole-ide-helper": "dev-master"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "autoload": {
    "psr-4": {
      "DevPledge\\": "src/"
    }
  },
  "config": {
    "process-timeout": 0
  },
  "scripts": {
    "start-docker": "docker-compose up",
    "start-php": "php -S localhost:8080 -t public index.php",
    "test": "phpunit"
  }
}
